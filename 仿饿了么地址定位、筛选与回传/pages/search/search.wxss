/*搜索框*/
.searcher {
	background: #009cf9;
}

.searcher input {
	margin: 10px;
	padding: 8px;
	background: white;
	font-size: 12px;
	color: #ccc;
}

.placeholder-class {
	color: #ccc;
}

/*标题头*/
.header {
	background: #eee;
	font-size: 12px;
	padding: 10px;
	line-height: 24px;
	color: #444;
}

/*当前定位*/
.current {
	color: #1a80d2;
	padding: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.current text {
	font-size: 12px;
}

.current image {
	width: 20px;
	height: 20px;
}

.current image:after {
	content: '重新定位';
}

/*结果行*/
.item {
	padding: 10px;
	display: flex;
	flex-direction: column;
	border-bottom: 1px solid #eee;
}

.item .title {
	width: 100%;
	font-size: 18px;
	line-height: 30px;
	color: #333;
}

.item .address {
	width: 100%;
	font-size: 14px;
	line-height: 24px;
	color: #666;
}